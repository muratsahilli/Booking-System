@using Entity.Concrete
@model List<Arama>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<link rel="stylesheet" href="~/mazer/assets/extensions/simple-datatables/style.css">
<link rel="stylesheet" href="~/mazer/assets/css/pages/simple-datatables.css">
<div class="page-title">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>Aramalar</h3>
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
            <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                <ol class="breadcrumb">
                </ol>
            </nav>
        </div>
    </div>
</div>
<section class="section">
    <div class="card">
        <div class="card-body">
            <table class="table table-striped" id="table1">
                <thead>
                    <tr>
                        <th>Arama Önceliği</th>
                        <th>Arayan Ünvanı</th>
                        <th>İsim</th>
                        <th>Konu</th>
                        <th>Telefon</th>
                        <th>Aranan Kişi</th>
                        <th>Aranma Tarihi</th>
                        <th>Kaydeden</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (item.AramaTipi.Aramatipi == "Acil")
                                {
                                    <span class="badge bg-danger">@item.AramaTipi.Aramatipi </span>
                                }
                                else if (item.AramaTipi.Aramatipi == "Bilgilendirme")
                                {
                                    <span class="badge bg-primary">@item.AramaTipi.Aramatipi </span>
                                }
                                else if (item.AramaTipi.Aramatipi == "Hal Hatır")
                                {
                                    <span class="badge bg-info">@item.AramaTipi.Aramatipi </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.AramaTipi.Aramatipi</span>
                                }
                            </td>

                            <td>@item.ArayanTipi.Arayantipi</td>
                            <td>@item.İsim</td>
                            <td>@item.Konu</td>
                            <td>@item.Telefon</td>
                            <td>@item.Aranan.Name</td>
                            <td>@item.AranmaTarihi </td>
                            <td>@item.Kaydeden.Name</td>
                            <td>
                                <a href="~/Arama/AramaDuzenle/@item.AramaId">
                                    <span class="badge bg-info">Güncelle</span>
                                    </a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>

</section>


<script src="~/mazer/assets/extensions/simple-datatables/umd/simple-datatables.js"></script>
<script src="~/mazer/assets/js/pages/simple-datatables.js"></script>
