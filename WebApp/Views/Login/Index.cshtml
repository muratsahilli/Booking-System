@model WebApp.Models.UserLoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş YAP - DSİ Randevu</title>
    <link rel="stylesheet" href="~/voler/assets/css/bootstrap.css">

    <link rel="shortcut icon" href="~/images/brand_logo.png" type="image/x-icon">
    <link rel="stylesheet" href="~/voler/assets/css/app.css">
</head>

<body>
    <div id="auth">

        <div class="container">
            <div class="row">
                <div class="col-md-5 col-sm-12 mx-auto">
                    <div class="card pt-4">
                        <div class="card-body">
                            <div class="text-center mb-5">
                                <img src="~/images/brand_logo.png" height="80" class='mb-4'>
                                <h3>Giriş Yap</h3>
                                <p>Devam etmek için lütfen giriş yapın.</p>
                            </div>
                            <form method="post">
                                <div class="form-group position-relative has-icon-left">
                                    <label for="username">Kullanıcı Adı</label>
                                    <div class="position-relative">
                                        <input type="text" class="form-control" id="username" name="UserName" asp-for="UserName">
                                        <span asp-validation-for="UserName"></span>
                                        <div class="form-control-icon">
                                            <i data-feather="user"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group position-relative has-icon-left">
                                    <div class="clearfix">
                                        <label for="password">Şifre</label>
                                        <a href="auth-forgot-password.html" class='float-end'>
                                            <small>Forgot password?</small>
                                        </a>
                                    </div>
                                    <div class="position-relative">
                                        <input type="password" class="form-control" id="password" name="Password" asp-for="Password">
                                        <span asp-validation-for="Password"></span>
                                        <div class="form-control-icon">
                                            <i data-feather="lock"></i>
                                        </div>
                                    </div>
                                </div>

                                <div class='form-check clearfix my-4'>
                                    <div class="checkbox float-start">
                                        <input type="checkbox" id="checkbox1" class='form-check-input'>
                                        <label for="checkbox1">Remember me</label>
                                    </div>
                                    <div class="float-end">
                                        <a href="Register">Hesabınız yok mu?</a>
                                    </div>
                                </div>
                                <div class="clearfix">
                                    <button class="btn btn-primary float-end">Giriş</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <script src="~/voler/assets/js/feather-icons/feather.min.js"></script>
    <script src="~/voler/assets/js/app.js"></script>
    <script src="~/voler/assets/js/main.js"></script>
</body>


</html>
